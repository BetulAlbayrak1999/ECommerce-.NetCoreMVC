@model BussinessLogicLayer.Dtos.OrderDtos.UpdateOrderRequestDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Update an Exist Order</h1>
<div>
   @if(ViewBag.ex != null)
   {
        @foreach(var ex in ViewBag.ex)
        {
             <span class="text-danger" >@ex</span>
        }
   }  
</div>
<div>
    <div>
        
        <script src="~/jquery/jquery.min.js"></script>
        <script src="~/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div>
                 @Html.Label("Product")
                @Html.DropDownListFor(x=> x.ProductId, (List<SelectListItem>)ViewBag.products, new { @class="form-control"})
                <br />
            </div> 
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form- control"  required/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

           
            <div>
                 @Html.Label("User")
                @Html.DropDownListFor(x=> x.ApplicationUserId, (List<SelectListItem>)ViewBag.applicationUsers, new { @class="form-control"})
                <br />

            </div> 
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <button type="submit" class=" btn btn-primary d-block mt-4">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
